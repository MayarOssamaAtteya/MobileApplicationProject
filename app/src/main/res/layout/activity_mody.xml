<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".mody"
        android:background="@drawable/rtts">


        <LinearLayout
            android:layout_width="396dp"
            android:layout_height="734dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="-2dp">

            <EditText
                android:id="@+id/album_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skin Care Category"
                android:inputType="textMultiLine"
                android:textColor="#5B2D25"
                tools:layout_editor_absoluteY="81dp" />

            <ImageView
                android:id="@+id/moist"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="255px"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/moist" />


            <TextView
                android:id="@+id/moistText"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="400px"
                android:text="50$"
                 android:textSize="30dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#5B2D25"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <ImageView
                android:id="@+id/water"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="250px"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img2" />

            <TextView
                android:textSize="30dp"
                android:id="@+id/waterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="430px"
                android:text="80$"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#5B2D25"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="-----------------------------------------------------------------------------------------------------"
                android:textSize="29dp" />
            <TextView
                android:id="@+id/cleanserText"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="80px"
                 android:textSize="30dp"
                android:text="Total:"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#5B2D25"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hylauText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100px"
                android:layout_marginLeft="625px"
                android:text="130$"
                android:textSize="30dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#5B2D25"
                android:textStyle="bold" />



            <Button
                android:id="@+id/checkout_button"
                android:layout_width="225dp"
                android:layout_height="59dp"
                android:layout_marginLeft="250px"
                android:layout_marginTop="20px"
                android:text="Make order"
                android:textStyle="bold"
                app:backgroundTint="#5B2D25" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>